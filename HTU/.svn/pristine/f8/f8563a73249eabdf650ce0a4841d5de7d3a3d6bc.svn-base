						  cancelButtonColor: "#555555",
			    	}).then((result) => {
			    		if(result.isConfirmed){
			    			const enteredText = result.value;
// 			    			$.ajax({
// 			    			      url: '/student/counsel/counselList?appCd='+appCd, 
