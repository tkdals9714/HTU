<%@ page language="java" contentType="text/html; charset=UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions"%>
<%@ taglib prefix="sec" uri="http://www.springframework.org/security/tags"%>
<link rel="stylesheet" href="/resources/css/bootstrap.min.css">
<script src="/resources/js/jquery.min.js"></script>


<div class="tab-content">
	<div role="tabpanel" id="react-aria-97-tabpane-design"
		aria-labelledby="react-aria-97-tab-design"
		class="fade pb-4 p-4 tab-pane active show">
		<table class="text-nowrap table">
			<thead>
				<tr>
					<th scope="col">글번호</th>
					<th scope="col">제목</th>
					<th scope="col">작성자</th>
					<th scope="col">작성일</th>
					<th scope="col">조회수</th>
				</tr>
			</thead>
			<tbody>
				<c:forEach items="${data}" var="boardVO" varStatus="stat">
					<tr>
						<th scope="row">${vs.count}</th>
						<td><a href="/common/board/publicize/detail?userCd=${boardVO.userCd}}">${boardVO.bdTitle}</a></td>
						  <td>${boardVO.userCd}</td>
                  <td><fmt:formatDate value="${boardVO.bdReg}" pattern="yyyy-MM-dd"/></td>
                  <td>${boardVO.bdCnt}</td>
               </tr>
            </c:forEach>
         </tbody>
      </table>
   </div>
</div>

<script>
   $(".detail").on("click", function (event) {
      
      const userCd = $(this).data("userCd")
      
      $.ajax({
         
         url: "/common/board/publicize/count?userCd="+userCd,
         type: "get",
         beforeSend:function(xhr){
            xhr.setRequestHeader("${_csrf.headerName}","${_csrf.token}");
         },
         success: (res) => {
            if (res != null) {
               location.href = "/common/board/free/detail?userCd="+userCd;
            }
         }
      });
      
   });
</script>