<form id="infoForm"
	action="/common/board/publicize/update?bdCd=${vo.bdCd}" method="get">
	<input type="hidden" id="bdCd" name="bdCd"
		value='<c:out value="${boardVO.bdCd}"/>'>
</form>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script type="text/javascript" src="/resources/js/postReport.js"></script>
<script type="text/javascript" src="/resources/js/main.js"></script>

<script type="text/javascript" src="/resources/js/postReport.js">
	$(function() {
		$(".image_container").each(function() {
			let url = $(this).data("url");
			$(this).css({
				"background-image" : "url(/resources/upload/" + url + ")",
				"background-position" : "center",
				"background-size" : "cover"
			});
		});
	});
</script>


<script>

let form = $("#infoForm");

$(function(){
	
	
	$("#btnUpdate").click(function(){
		form.attr("action", "/common/board/publicize/update");
		form.submit();
	});
	
	// 버튼 클릭 이벤트 정의
	$("#btnDelete").click(function() {
	    // 확인 다이얼로그 표시
	    if (confirm("게시물을 삭제하시겠습니까?")) {
	        // 삭제 함수 호출
	        deletePost("${boardVO.bdCd}", "${_csrf.token}");
	    }
	});
});


// 게시물 삭제 함수
function deletePost(bdCd, csrfToken) {
    $.ajax({
        type: "POST",
        url: "/common/board/free/deletePost",
        data: JSON.stringify({ bdCd: bdCd }),
        contentType: "application/json;charset=utf-8",
        dataType: "json",
        headers: {
            "X-CSRF-TOKEN": csrfToken
        },
        success: function(data) {
            if (data.result === "success") {
            	alertSuccess("게시물이 삭제되었습니다.", "/common/board/free/list");
    			//window.history.back();
                //url = "/common/board/publicize/list"; // 목록 페이지로 이동2
    			<sec:authorize access="hasRole('ROLE_EMPLOYEE')">
	            	alertSuccess("게시물이 삭제되었습니다.", "/common/employee/postreport/list");
				</sec:authorize>
// 				location.href = url;

            } else {
                alertError("삭제에 실패했습니다.");
            }
        },
        error: function(jqXHR, textStatus, errorThrown) {
            console.error("AJAX Error:", textStatus, errorThrown);
            alertError("서버 오류로 인해 게시물 삭제에 실패했습니다.");
        }
    });
}

</script>

