<script>
function alertInfo(message, url) {
	  const Toast = Swal.mixin({
	    toast: true,
	    position: "top",
	    width: 530,
			padding: 30,
	    showConfirmButton: true,
			confirmButtonColor: "#333333",
			confirmButtonText: '확인',
	    didClose: () => {
	      alertLocation(url);
	    },
	    customClass: {
